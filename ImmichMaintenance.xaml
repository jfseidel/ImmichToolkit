<Window x:Class="ImmichMaintenance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Immich Maintenance Toolkit" Height="600" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Immich Maintenance Dashboard" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <GroupBox x:Name="BackupGroupBox" Grid.Row="1" Header="Backup Options" Margin="5">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Number of backups to keep:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="BackupNumberTextBox" Width="50" HorizontalAlignment="Left" ToolTip="Enter the number of recent backups to keep. Older backups will be automatically deleted."/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox x:Name="ScheduledBackupGroupBox" Grid.Row="2" Header="Scheduled Backup" Margin="5">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Interval:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="IntervalDropdown" Width="100" ToolTip="Select the frequency for the scheduled backup.">
                        <ComboBoxItem Content="Daily"/>
                        <ComboBoxItem Content="Weekly" IsSelected="True"/>
                        <ComboBoxItem Content="Monthly"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel x:Name="WeeklyControls" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Day of the week:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="DayOfWeekDropdown" Width="150" ToolTip="Select the day of the week for weekly backups.">
                        <ComboBoxItem Content="Sunday" IsSelected="True"/>
                        <ComboBoxItem Content="Monday"/>
                        <ComboBoxItem Content="Tuesday"/>
                        <ComboBoxItem Content="Wednesday"/>
                        <ComboBoxItem Content="Thursday"/>
                        <ComboBoxItem Content="Friday"/>
                        <ComboBoxItem Content="Saturday"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel x:Name="MonthlyControls" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Collapsed">
                    <TextBlock Text="Day of the month (1-31):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="DayOfMonthDropdown" Width="70" ToolTip="Select the day of the month for monthly backups."/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Time (HH:mm):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="TimeTextBox" Width="80" Text="03:00" ToolTip="Enter the time for the scheduled backup (e.g., 03:00 for 3am)."/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="AddScheduleButton" Content="Add Scheduled Backup" Width="180" Height="40" Margin="5" ToolTip="Creates a Windows scheduled task to run the backup automatically."/>
                    <Button x:Name="RemoveScheduleButton" Content="Remove Scheduled Backup" Width="180" Height="40" Margin="5" ToolTip="Deletes the existing scheduled backup task."/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox x:Name="RestoreGroupBox" Grid.Row="3" Header="Restore Database" Margin="5">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Select backup to restore:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="RestoreFileDropdown" Width="250" ToolTip="Select a database backup file to restore. The current database will be replaced."/>
                </StackPanel>
                <Button x:Name="RestoreButton" Content="Restore Database" Width="200" Height="40" Margin="5" ToolTip="Replaces the current database with the selected backup file."/>
            </StackPanel>
        </GroupBox>
        
        <StackPanel x:Name="UpdateRollbackPanel" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20">
            <Button x:Name="BackupButton" Content="Run Backup Now" Width="150" Height="40" Margin="5" ToolTip="Creates a new database backup immediately."/>
            <Button x:Name="UpdateButton" Content="Update Immich" Width="150" Height="40" Margin="5" ToolTip="Pulls the latest Immich Docker images and updates your server. Automatically creates a rollback snapshot."/>
            <Button x:Name="RollbackButton" Content="Rollback Update" Width="150" Height="40" Margin="5" ToolTip="Reverts Immich to the state it was in before the last update using the saved snapshot."/>
        </StackPanel>
        
        <TextBox x:Name="StatusText" Grid.Row="5" IsReadOnly="True" Text="Ready." TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,15,0,0"/>
        
        <ProgressBar x:Name="ProgressBar" Grid.Row="6" Height="15" Margin="0,5,0,0" Minimum="0" Maximum="100"/>
        
    </Grid>
</Window>