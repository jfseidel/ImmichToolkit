<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Immich Maintenance Toolkit" Height="600" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Immich Maintenance Dashboard" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>

        <GroupBox x:Name="BackupGroupBox" Grid.Row="1" Header="Backup Options" Margin="2">
            <StackPanel Margin="2">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                    <TextBlock Text="Number of backups to keep:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="BackupNumberTextBox" Width="50" Height="30" VerticalContentAlignment="Center" HorizontalAlignment="Left" ToolTip="Enter the number of recent backups to keep. Older backups will be automatically deleted."/>
                    <Button x:Name="BackupButton" Content="Run Backup Now" Width="150" Height="30" Margin="10,0,0,0" ToolTip="Creates a new database backup immediately."/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox x:Name="ScheduledBackupGroupBox" Grid.Row="2" Header="Scheduled Backup" Margin="2">
            <StackPanel Margin="2">
                <!-- Daily Schedule -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                    <CheckBox x:Name="DailyScheduleCheckBox" Content="Daily" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Time (HH:mm):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="DailyTimeTextBox" Width="80" Text="03:00" ToolTip="Enter the time for the daily backup (e.g., 03:00 for 3am)."/>
                </StackPanel>
                <!-- Weekly Schedule -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                    <CheckBox x:Name="WeeklyScheduleCheckBox" Content="Weekly" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Day:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="WeeklyDayOfWeekDropdown" Width="100" ToolTip="Select the day of the week for weekly backups.">
                        <ComboBoxItem Content="Sunday" IsSelected="True"/>
                        <ComboBoxItem Content="Monday"/>
                        <ComboBoxItem Content="Tuesday"/>
                        <ComboBoxItem Content="Wednesday"/>
                        <ComboBoxItem Content="Thursday"/>
                        <ComboBoxItem Content="Friday"/>
                        <ComboBoxItem Content="Saturday"/>
                    </ComboBox>
                    <TextBlock Text="Time (HH:mm):" VerticalAlignment="Center" Margin="10,0,10,0"/>
                    <TextBox x:Name="WeeklyTimeTextBox" Width="80" Text="03:00" ToolTip="Enter the time for the weekly backup (e.g., 03:00 for 3am)."/>
                </StackPanel>
                <!-- Monthly Schedule -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                    <CheckBox x:Name="MonthlyScheduleCheckBox" Content="Monthly" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Day:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="MonthlyDayOfMonthDropdown" Width="70" ToolTip="Select the day of the month for monthly backups."/>
                    <TextBlock Text="Time (HH:mm):" VerticalAlignment="Center" Margin="10,0,10,0"/>
                    <TextBox x:Name="MonthlyTimeTextBox" Width="80" Text="03:00" ToolTip="Enter the time for the monthly backup (e.g., 03:00 for 3am)."/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2,0,0">
                    <Button x:Name="UpdateScheduleButton" Content="Update Schedule" Width="200" Height="30" Margin="5" ToolTip="Updates the scheduled backup tasks based on the selected options."/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="RestoreGroupBox" Grid.Row="3" Header="Restore Database" Margin="2">
            <StackPanel Margin="2">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                    <TextBlock Text="Select backup to restore:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="RestoreFileDropdown" Width="250" ToolTip="Select a database backup file to restore. The current database will be replaced."/>
                </StackPanel>
                <Button x:Name="RestoreButton" Content="Restore Database" Width="200" Height="30" Margin="5" ToolTip="Replaces the current database with the selected backup file."/>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="UpdateImmichGroupBox" Grid.Row="4" Header="Update Immich" Margin="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                <Button x:Name="UpdateButton" Content="Update Immich" Width="150" Height="30" Margin="5" ToolTip="Pulls the latest Immich Docker images and updates your server. Automatically creates a rollback snapshot."/>
                <Button x:Name="RollbackButton" Content="Rollback Update" Width="150" Height="30" Margin="5" ToolTip="Reverts Immich to the state it was in before the last update using the saved snapshot."/>
            </StackPanel>
        </GroupBox>
        <TextBox x:Name="StatusText" Grid.Row="5" IsReadOnly="True" Text="Ready." TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="0,5,0,0" Height="80"/>
        <ProgressBar x:Name="ProgressBar" Grid.Row="6" Height="15" Margin="0,2,0,0" Minimum="0" Maximum="100"/>
    </Grid>
</Window>