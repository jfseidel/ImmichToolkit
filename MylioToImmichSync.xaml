<Window x:Class="MylioToImmich.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Immich XMP Toolkit" Height="500" Width="450">
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="MainStackPanel" VerticalAlignment="Top" HorizontalAlignment="Center">
                
                <TextBlock Text="Create Immich XMP files" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="CreateImmichXMPsButton" Content="Create Immich XMPs" Width="150" Height="30" Margin="0,0,10,0" IsEnabled="False"/>
                    <Button x:Name="DeleteImmichXMPsButton" Content="Delete Immich XMPs" Width="150" Height="30" Margin="10,0,0,0"/>
                </StackPanel>
                <Button x:Name="RetryButton" Content="Retry ExifTool Check" Width="150" Height="30" Margin="0,10,0,0"/>
                
                <Separator Margin="0,20,0,20"/>

                <TextBlock Text="Rescan Immich" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Server IP:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="ServerIpText" Width="150" IsReadOnly="True" Background="#f0f0f0"/>
                    <TextBlock Text="Port:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                    <TextBox x:Name="PortText" Width="50" IsReadOnly="True" Background="#f0f0f0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="API Key:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="ApiKeyTextBox" Width="250"/>
                </StackPanel>
                <Button x:Name="SaveApiKeyButton" Content="Save API Key" Width="150" Height="30" Margin="0,0,0,10"/>

                <Button x:Name="DiscoverLibrariesButton" Content="Discover External Libraries" Width="200" Height="30" Margin="0,0,0,10"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Select Library:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="LibraryComboBox" Width="200"/>
                </StackPanel>

                <Button x:Name="RescanButton" Content="Trigger Rescan" Width="200" Height="30" IsEnabled="False"/>
                
                <Separator Margin="0,20,0,20"/>

                <TextBlock x:Name="StatusText" FontWeight="Bold" Margin="0,0,0,10" MinWidth="300" TextAlignment="Center"/>
                <ProgressBar x:Name="ProgressBar" Height="20"/>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>