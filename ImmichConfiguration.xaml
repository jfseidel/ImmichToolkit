<Window x:Class="ImmichConfiguration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Immich Configuration" Height="500" Width="450" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="Immich Configuration" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <GroupBox Header="Default Paths" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Immich location:" VerticalAlignment="Center"/>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ImmichRootTextBox" Grid.Column="0" Margin="0,0,5,0" ToolTip="The main directory for all Immich-related files and subfolders."/>
                            <Button x:Name="BrowseImmichRootButton" Grid.Column="1" Content="Browse"/>
                        </Grid>

                        <Label Grid.Row="1" Grid.Column="0" Content="Photo upload location:" VerticalAlignment="Center"/>
                        <TextBox x:Name="UploadLocationTextBox" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True" Opacity="0.6" ToolTip="The folder where Immich will store uploaded photos and videos."/>

                        <Label Grid.Row="2" Grid.Column="0" Content="Database location:" VerticalAlignment="Center"/>
                        <TextBox x:Name="DbDataLocationTextBox" Grid.Row="2" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True" Opacity="0.6" ToolTip="The location of the Immich database files."/>

                        <Label Grid.Row="3" Grid.Column="0" Content="Backup location:" VerticalAlignment="Center"/>
                        <TextBox x:Name="ImmichBackupTextBox" Grid.Row="3" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True" Opacity="0.6" ToolTip="The folder for automated backups of your Immich data."/>

                        <Label Grid.Row="4" Grid.Column="0" Content="ImmichToolkit location:" VerticalAlignment="Center"/>
                        <TextBox x:Name="ToolkitLocationTextBox" Grid.Row="4" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True" Opacity="0.6" ToolTip="The directory containing the ImmichToolkit files."/>

                        <Label Grid.Row="5" Grid.Column="0" Content="External library:" VerticalAlignment="Center"/>
                        <Grid Grid.Row="5" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ExternalLibraryTextBox" Grid.Column="0" Margin="0,0,5,0" ToolTip="The directory containing your external photos library."/>
                            <Button x:Name="BrowseExternalLibraryButton" Grid.Column="1" Content="Browse"/>
                        </Grid>

                        <Label Grid.Row="6" Grid.Column="0" Content="Mylio inbox location:" VerticalAlignment="Center"/>
                        <TextBox x:Name="MylioInboxTextBox" Grid.Row="6" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True" Opacity="0.6" ToolTip="A specific folder for Mylio imports."/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Default Files" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="ImmichToolkit configuration:" VerticalAlignment="Center"/>
                        <TextBox x:Name="ImmichJsonTextBox" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True" Opacity="0.6" ToolTip="The path to the main configuration file for this toolkit."/>

                        <Label Grid.Row="1" Grid.Column="0" Content="ImmichToolkit log:" VerticalAlignment="Center"/>
                        <TextBox x:Name="ImmichLogTextBox" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True" Opacity="0.6" ToolTip="The file where the toolkit logs its actions."/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Immich Server" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="IP address:" VerticalAlignment="Center"/>
                        <TextBox x:Name="IpAddressTextBox" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5" IsReadOnly="True" Opacity="0.6" ToolTip="The IP address of your Immich server, auto-detected by the script."/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Port:" VerticalAlignment="Center"/>
                        <TextBox x:Name="PortTextBox" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" ToolTip="The port used to access the Immich web interface."/>

                        <Label Grid.Row="2" Grid.Column="0" Content="API key:" VerticalAlignment="Center"/>
                        <TextBox x:Name="ApiKeyTextBox" Grid.Row="2" Grid.Column="1" Margin="0,5,0,5" ToolTip="The API key for authentication with the Immich server."/>

                        <Label Grid.Row="3" Grid.Column="0" Content="Database password:" VerticalAlignment="Center"/>
                        <TextBox x:Name="DatabasePasswordTextBox" Grid.Row="3" Grid.Column="1" Margin="0,5,0,5" ToolTip="The password for the Immich database. This is used by the PostgreSQL container."/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="UndoButton" Content="Undo" Margin="5" Padding="10,5"/>
                <Button x:Name="SaveButton" Content="Save Configuration" Margin="5" Padding="10,5"/>
            </StackPanel>
            <StatusBar Grid.Row="1" VerticalAlignment="Bottom" Margin="0,10,0,0">
                <StatusBarItem>
                    <TextBlock x:Name="StatusTextBlock" Text="Ready"/>
                </StatusBarItem>
                <StatusBarItem HorizontalAlignment="Right">
                    <ProgressBar x:Name="MainProgressBar" Width="150" Height="15" Minimum="0" Maximum="100"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>